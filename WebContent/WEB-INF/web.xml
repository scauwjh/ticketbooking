<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ticketbooking</display-name>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.ticketbooking.business.core.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/inner/*</url-pattern>
    <url-pattern>/inner/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CinemaFilter</filter-name>
    <filter-class>com.ticketbooking.business.core.filter.CinemaFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CinemaFilter</filter-name>
    <url-pattern>/inner/cinema/*</url-pattern>
    <url-pattern>/cinema/*</url-pattern>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CustomerFilter</filter-name>
    <filter-class>com.ticketbooking.business.core.filter.CustomerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CustomerFilter</filter-name>
    <url-pattern>/inner/customer/*</url-pattern>
    <url-pattern>/customer/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/outward/error/403.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/outward/error/404.html</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/outward/error/405.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/outward/error/500.html</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/outward/error/503.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>